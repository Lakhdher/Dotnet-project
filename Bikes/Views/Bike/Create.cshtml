@model Bikes.Models.ViewModels.BikeViewModel
@using Bikes.Extensions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 style='color : steelblue'>Add Bike</h2>
<form method="post" action="Create">
    <Input type="hidden" asp-for="Makes" />

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Make</h5>
        </div>
        <div class="col-4">
            <select class="form-select" asp-for="Bike.MakeId" asp-items="Model.Makes.ToSelectListItem()">
            </select>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Model</h5>
        </div>
        <div class="col-4">
            <select class="form-select" asp-for="Bike.ModelId" asp-items="Model.Models.ToSelectListItem()">
            </select>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Year</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.Year" /> 
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Mileage</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.Mileage" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Price</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.Price" />
        </div>
        <div class="col-1">
            <h5 class="text-end text-secondary mt-1">Currency</h5>
        </div>
        <div class="col-4">
            <select class="form-select" asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItem()"> </select>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">features</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.Features" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Seller Name</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.SellerName" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Seller Email</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.SellerEmail" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-2">
            <h5 class="text-end text-secondary mt-1">Seller Phone</h5>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Bike.SellerPhone" />
        </div>
    </div>


    <div class="row mt-4">
        <span class="col-2 text-end pe-0"><input type="submit" class="btn btn-primary" value="Create" style="background-color : steelblue" /></span>
        <span class="col-2"><a asp-action="Index" class="btn btn-success">Back</a></span>
    </div>
</form>
