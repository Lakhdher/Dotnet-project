@model IEnumerable<Bikes.Models.Make>
@{
    ViewData["Title"] = "Vroom";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 style='color : steelblue'>Makes of Bikes</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Make" asp-action="Create" style="background-color : steelblue"> <i class="fa-solid fa-motorcycle"></i> &nbsp; Add new Make</a>
        </div>
    </div>
    <br/>
    <div class="col-12">    
        <table class="table table-striped border">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Name)
                </td>
                <td class="text-end">
                    <div class="btn-group" role="group">
                            <a type="button" class="btn btn-primary rounded-2 me-1" href="@Url.Action("Edit","Make",new {id=item.Id})" style="background-color : steelblue"><i class="far fa-edit"></i></a>
                        <form action="Delete" method="post">
                                <button onclick="if(!confirm('Are you sure you want to delete this make?')){return(false)}" type="submit" class="btn btn-danger rounded-2" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
    </div>

</div>
